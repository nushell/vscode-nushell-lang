{
  "name": "vscode-nushell-lang",
  "displayName": "vscode-nushell-lang",
  "description": "nushell language for vscode",
  "author": "The Nushell Project Developers",
  "version": "1.1.0",
  "preview": false,
  "license": "MIT",
  "publisher": "TheNuProjectContributors",
  "homepage": "https://www.nushell.sh/",
  "repository": {
    "type": "git",
    "url": "https://github.com/nushell/vscode-nushell-lang.git"
  },
  "bugs": {
    "url": "https://github.com/nushell/vscode-nushell-lang/issues"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "icon": "assets/nushell.ico",
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onTerminalProfile:nushell_default"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "nushell",
        "aliases": [
          "nushell",
          "nu"
        ],
        "extensions": [
          ".nu"
        ],
        "icon": {
          "light": "assets/nu.svg",
          "dark": "assets/nu.svg"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "nushell",
        "scopeName": "source.nushell",
        "path": "./syntaxes/nushell.tmLanguage.json"
      }
    ],
    "keybindings": [
      {
        "command": "start https://www.nushell.sh/book/",
        "key": "ctrl+f1",
        "when": "editorTextFocus && editorLangId == 'nushell'"
      },
      {
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'nushell'",
        "mac": "cmd+alt+j",
        "win": "ctrl+alt+j",
        "linux": "ctrl+alt+j"
      }
    ],
    "snippets": [
      {
        "language": "nushell",
        "path": "./snippets/nushell.json"
      }
    ],
    "terminal": {
      "profiles": [
        {
          "title": "Nushell",
          "id": "nushell_default"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Nushell LSP",
      "properties": {
        "nushellLanguageServer.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "nushellLanguageServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "nushellLanguageServer.hints.showInferredTypes": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Display types inferred by nushell."
        },
        "nushellLanguageServer.nushellExecutablePath": {
          "scope": "resource",
          "type": "string",
          "default": "nu",
          "description": "The path to the nushell executable."
        },
        "nushellLanguageServer.maxNushellInvocationTime": {
          "scope": "resource",
          "type": "number",
          "default": 10000000,
          "description": "The maximum time in milliseconds to wait for nushell to respond."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "dependencies": {
    "glob": "^7.2.0",
    "os": "^0.1.2"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.65.0",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "mocha": "^9.2.1",
    "typescript": "^5.0.2",
    "ts-loader": "^9.2.8",
    "vsce": "^2.9.1",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "keywords": [
    "nushell",
    "nu",
    "shell",
    "scripting"
  ],
  "galleryBanner": {
    "color": "#008000",
    "theme": "light"
  }
}
